@model IEnumerable<Ryan_BugTracker.Models.AdminUserListModels>

@{
    ViewBag.Title = "UserList";
}

<div class="widget widget-table">
    <div class="widget-header">
        <h3>
            <i class="fa fa-key"></i> Users
        </h3>
        <div class="btn-group widget-header-toolbar">
            <a href="#" title="Focus" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
            <a href="#" title="Expand/Collapse" class="btn-borderless btn-toggle-expand"><i class="fa fa-chevron-up"></i></a>
        </div>
    </div>
    <div class="widget-content">
        <table id="datatable-data-export" class="table table-sorting table-striped table-hover table-bordered datatable">
            <thead>
                <tr>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Roles</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr style="font-size: 10px">
                            <td>
                                @Html.DisplayFor(modelItem => item.user.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.user.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.user.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.user.PhoneNumber)
                            </td>
                            <td>
                                @foreach (var role in item.roles)
                                {
                                    <p>@role</p>
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Manage Roles", "EditUserRoles", new { id = item.user.Id }) <br />
                                @Html.ActionLink("Profile", "ProfilePage", "Home", new { id = item.user.Id }, null) <br />
                                @Html.ActionLink("Delete", "Delete", new { id = item.user.Id }) <br />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
